{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block stylesheets %}
    <link href="{{ asset("styles/style.css") }}" rel="stylesheet">
    <link href="{{ asset("styles/login.css") }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <section class="utilisateurHeader">
        <div class="consumableHeader">
            <header>
                <a href="/" class="logo">StonkSurfer</a>
                <ul id="navbar">
                    {% if app.user %}
                        <li>
                            <a href="/logout"><i class="fas fa-user-slash"></i> Déconnexion</a>
                        </li>
                    {% else %}
                        <li>
                            <a href="/register"><i class="fas fa-user-plus"></i> S'inscrire</a>
                        </li>
                        <li>
                            <a href="/login"><i class="fas fa-user"></i> Se connecter</a>
                        </li>
                    {% endif %}

                </ul>
            </header>
        </div>
    </section>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <form method="post" class="formClass">

        <h1 class="h3 mb-3 font-weight-normal">S'il vous plaît inscrivez-vous</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}, 'label': 'Email :'}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe', 'attr': {'class': 'form-control'}
        }) }}
        {{ form_row(registrationForm.agreeTerms,{'label': 'Acceptez vous les CU'} ) }}

        <div class=" inputBox">
            <button type="submit" class="buttonClass borderInput">
                S'inscrire
            </button>
        </div>
    </form>

    {{ form_end(registrationForm) }}
{% endblock %}
